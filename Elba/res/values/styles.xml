<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="@style/HoloLight">
	   <!--<item name="android:windowBackground">#ECECEC</item>-->
    </style>

    <style name="t_emphasized" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="t_optional" parent="@android:style/TextAppearance">
        <item name="android:textColor">#999999</item>
		<item name="android:textSize">14sp</item>
	</style>

    <style name="t_heading" parent="@android:style/TextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

	<style name="t_topLine">
		<item name="android:paddingTop">10dp</item>
	</style>

	<style name="btn_em">
		<item name="android:background">@drawable/btn_em</item>
		<item name="android:textSize">18dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="heading_bar">
		<item name="android:background">@drawable/heading_bar</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textSize">22dp</item>
		<item name="android:textColor">#ffffff</item>
	</style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTheme" parent="android:Theme.Black">
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
		<item name="android:editTextStyle">@style/EditTextHoloDark</item>
    </style>

    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="t_emphasized" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

	<style name="EditTextHoloDark" parent="android:style/Widget.EditText">
		<item name="android:background">@drawable/edit_text_holo_dark</item>
		<item name="android:textColor">#ffffff</item>
	</style>

</resources>

<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
					android:color="#666666"	/>
			<corners
					android:radius="4dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
					android:startColor="#666666"
					android:endColor="#999999"
					android:angle="90"
					/>
			<corners
					android:radius="4dp" />
		</shape>
	</item>
</selector>